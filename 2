import { Link, useLocation } from "react-router-dom";
export default function CoursesNavigation() {

  const { pathname } = useLocation();
  console.log('Path' + pathname)
  const pathSplit = pathname.split('/')
  const currentPage = pathSplit[pathSplit.length - 1]
  const currentCourse = pathSplit[pathSplit.length - 2]
  console.log(currentPage)
  console.log(currentCourse)
  const links = ["Home", "Modules", "Piazza", "Zoom", "Assignments", "Quizzes", "Grades", "People"];

  return (
    <div id="wd-courses-navigation" className="list-group fs-5 rounded-0">
      {links.map((page) => (
      <Link to={`/Kanbas/Courses/${currentCourse}/${page}`} id="wd-course-home-link" className={`list-group-item border border-0 ${page.includes(currentPage) ? "active" : "text-danger"}`}> {page}
      </Link>
      ))}
    </div>
);}


